<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
  xmlns:noesis="clr-namespace:NoesisGUIExtensions;assembly=Noesis.GUI.Extensions"
  xmlns:local="clr-namespace:RodeoStat">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Resources/Themes/NoesisTheme.DarkRed.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    
    <Style x:Key="InfoPanelLabel" TargetType="{x:Type Label}" BasedOn="{StaticResource {x:Type Label}}">
      <Setter Property="Background" Value="Black"/>
      <Setter Property="Padding" Value="4,0,4,0"/>
      <Setter Property="Margin" Value="0"/>
      <Setter Property="FontSize" Value="12"/>
    </Style>
    <Style x:Key="InfoPanelIcon" TargetType="{x:Type Label}" BasedOn="{StaticResource {x:Type Label}}">
      <Setter Property="Background" Value="Black"/>
      <Setter Property="Padding" Value="0"/>
      <Setter Property="Margin" Value="0"/>
      <Setter Property="FontSize" Value="12"/>
      <Setter Property="FontFamily" Value="#Segoe MDL2 Assets"/>
    </Style>
</ResourceDictionary>